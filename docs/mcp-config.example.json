{
  "mcpServers": {
    "postgres": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-postgres",
        "postgresql://postgres:postgres@localhost:5432/organizador_financeiro"
      ]
    },
    "pytest": {
      "command": "npx",
      "args": [
        "-y",
        "@kieranlal/mcp_pytest_service",
        "--cwd",
        "./backend"
      ],
      "env": {
        "TEST_DATABASE_URL": "postgresql://postgres:postgres@localhost:5432/organizador_financeiro_test"
      }
    }
  }
}
