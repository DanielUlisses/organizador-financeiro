# Replace "owner" with your GitHub org/user in image names.
BACKEND_IMAGE=ghcr.io/owner/organizador-financeiro-backend:latest
FRONTEND_IMAGE=ghcr.io/owner/organizador-financeiro-frontend:latest

# External PostgreSQL LXC connection string.
DATABASE_URL=postgresql://organizador_user:change-me@10.0.10.20:5432/organizador_financeiro

# Backend app settings.
AUTH_SECRET=change-this-with-a-long-random-secret
AUTH_URL=https://finance.seudominio.com
UVICORN_WORKERS=2

# Published ports in the app LXC (if no reverse proxy on host).
BACKEND_PORT=8000
FRONTEND_PORT=8080

# Uploads persistent storage on app LXC host.
UPLOADS_HOST_PATH=/opt/organizador/uploads
UPLOADS_PUBLIC_BASE_URL=/uploads
